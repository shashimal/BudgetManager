#set ($layout = "WEB-INF/velocity/layout/layout.vm") 
#set($contextPath = $link.getContextURL() )
<div class="panel panel-default" style="margin:20px">
  <!-- Default panel contents -->
  <div class="panel-heading">Payees</div>
  <div class="panel-body">

#if( $!message)
<div class="alert alert-success fade in">
    <a href="#" class="close" data-dismiss="alert">&times;</a>
    <strong> $!message</strong>
</div>
#end
<div class="btn-group btn-group-sm" style="float:right;" >
     <button type="button" class="btn btn-default btn-sm"  id="newExpCategory">New Payee</button>
</div>

  <!-- Table -->
 		<table class="table">
        	<thead>
                                        <tr>
                                       
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th></th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                         #foreach( $payee in $payees)
								         <tr>
								         	
                                                                                <td>$payee.name</td>
										<td>$payee.description</td>
                                                                                 <td><a  href="${contextPath}/payee-edit/${payee.id}.html"> <span class="glyphicon glyphicon-pencil"></span></a></td>
                                                                                 <td><a id="deletePayee_${payee.id}" href="#"> <span class="glyphicon glyphicon-trash"></span></a></td>
								         </tr>
         								#end
                                    </tbody>
      </table>
        </div>
<div style="float:right">
    <nav>
        <ul class="pagination">
            #if( $currentPage != 1)
            <li>
                    #set( $previous = $currentPage - 1 )
                  <a href="${contextPath}/payee-list.html?page=$previous" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                  </a>
                </li>
            #end


            #foreach($i in [1..$noOfPages])
                #if( $currentPage == $i)
                    <li class="disabled"><a href="#">$i</a></li>
                #else
                   <li> <a href="${contextPath}/payee-list.html?page=${i}">$i</a></li>
                #end
            #end

            #if( $currentPage < $noOfPages)
            #set( $next = $currentPage + 1 )
            <li>
                  <a href="${contextPath}/payee-list.html?page=$next" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                  </a>
                </li>

            #end
        </ul>
    </nav>
</div>
</div>
<script type="text/javascript">
$(document).ready(function() {    

    $('#newExpCategory').click(function() {
    	location.href= "${contextPath}/payee-create.html";				
    });  
    
    $("a[id^=deletePayee_]").click(function() {
    	res = confirm("Do you want to delete this payee?");
		 if(res) {
	    	var id = $(this).attr('id');
	    	var splitId = id.split("_");
	    	location.href="${contextPath}/payee-delete/"+splitId[1]+".html"	
	    } 
    
    });
    
} );
</script>